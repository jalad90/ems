<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/employee_db</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<mapping resource="LoginDetail.hbm.xml"></mapping>
		<mapping resource="RegisterUser.hbm.xml"></mapping>
		<mapping resource="AppraisalDetail.hbm.xml"></mapping>
		<mapping resource="UpdateUserDetail.hbm.xml"></mapping>
		<mapping resource="GetUserDetail.hbm.xml"></mapping>
		<mapping resource="UserLeave.hbm.xml"></mapping>
		<mapping resource="UserDbDetailDelete.hbm.xml"></mapping>
		<mapping resource="FeedBackDetail.hbm.xml"></mapping>
	</session-factory>
</hibernate-configuration>
